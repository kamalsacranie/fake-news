{
  "name": "be-nc-news",
  "version": "1.0.0",
  "description": "bc-nc-news",
  "main": "./dist/listen.js",
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "scripts": {
    "seed": "node ./dist/db/seeds/run-seed.js",
    "test": "jest --detectOpenHandles --runInBand --verbose --passWithNoTests --no-cache",
    "prepare": "[ \"$NODE_ENV\" != \"production\" ] && husky install",
    "start": "npm run build; npm run seed; node ./dist/listen.js",
    "build": "tsc",
    "seed-prod": "NODE_ENV=production npm run seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northcoders/be-nc-news.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/northcoders/be-nc-news/issues"
  },
  "homepage": "https://github.com/northcoders/be-nc-news#readme",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "@types/pg-format": "^1.0.2",
    "@types/supertest": "^2.0.12",
    "husky": "^8.0.3",
    "jest-extended": "^3.2.4",
    "pg-format": "^1.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.10.0"
  },
  "engines": {
    "node": ">=19.8.1 <20"
  }
}
